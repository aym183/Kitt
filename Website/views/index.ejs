<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Mishki</title>
    <link rel="stylesheet" type = 'text/css' href="/styles/style.css">
    <link rel="icon" href="/images/icon.png" type="image/x-icon">
    <!-- <script src="../scripts/base.js"></script> -->
  </head>
  <body>  <!-- onload="getLinks()" -->
    <div class="container">
      <main>
        <div class="profile-view">
            <img class="profile-image" src=<%= profile_image %> alt="profile image">
            <h1><%= username %></h1>
        </div>

        <div class="products-list">
          <% for (var i = 0; i < products.length; i++) { %>
              <div class="products">
                <img src="<%= products[i][3] %>" class="product-image" alt="your image description">
                <p class="product-title"><%= products[i][0] %></p>
                <div class="product-horizontal-row">
                  <p><b><%= products[i][2] %> AED</b></p>
                  <button type="button">Buy Now</button>
                </div>
              </div>
          <% } %>
                            
        </div>

        <div class="links-list">
          <% for (var i = 0; i < links.length; i++) { %>
            <a href="<%= links[i][1] %>" >
              <div class="links">
                <h3><%= links[i][0] %></h3>
              </div>
            </a>
          <% } %>
        </div>

      </main>
      <footer>
        Made with <b>mishki.co</b>
      </footer>
    </div>
  </body>
</html>